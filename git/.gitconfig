[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	df = diff
	hist = log --oneline --all --graph --decorate
	mg = merge --no-ff
	ph = push --tags
	ls = ls-files

[merge]
	tool = vimdiff

[http]
	sslVerify = false

[pack]
	threads = 1

[push]
	default = simple

[pager]
	log = ~/bin/diff-highlight | less
	show = ~/bin/diff-highlight | less
	diff = ~/bin/diff-highlight | less
