# .bashrc

export HISTFILESIZE=1000000000
export HISTSIZE=1000000
export HISTIGNORE="&:cd:ls:[bf]g:exit:bash:[cxh]:a\ "
export HISTCONTROL=ignoreboth:erasedups  # don't put duplicate lines in the history

# append to the history file, don't overwrite it
shopt -s histappend
# check the window size after each command and, if necessary, update the values of LINES and COLUMNS.
shopt -s checkwinsize
# correct minor errors in the spelling of a directory component in a cd command
shopt -s cdspell
# save all lines of a multiple-line command in the same history entry (allows easy re-editing of multi-line commands)
shopt -s cmdhist

export EDITOR=vim
export PAGER=less

# bash aliases
[ -f ~/.bashrc_aliases ] && source ~/.bashrc_aliases

# bash functions
[ -f ~/.bashrc_functions ] && source ~/.bashrc_functions

# local bash settings
[ -f ~/.bashrc_local ] && source ~/.bashrc_local
