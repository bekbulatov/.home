	name = bekbulatov

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    co = checkout
    ci = commit
    up = remote update
    st = status
    br = branch
    df = diff
    hist = log --pretty=format:'%Cred%h%Creset %ad | %Cgreen%s%d%Creset [%an]' --graph --date=short
    mg = merge --no-ff
    ph = push --tags
    ls = ls-files

[merge]
    tool = vimdiff
