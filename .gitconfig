[user]
	email = a.bekbulatov@corp.mail.ru
	name = bekbulatov

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	co = checkout
	ci = commit
	up = remote update
	st = status
	br = branch
	df = diff
	# hist = log --pretty=format:'%Cred%h%Creset %ad | %Cgreen%s%d%Creset [%an]' --graph --date=short
	hist = log --oneline --all --graph --decorate
	mg = merge --no-ff
	ph = push --tags
	ls = ls-files
	dta = !sh -c 'git tag -a \"$1\" -m \"`date +"%d.%m"`\"' -
	dtl = !sh -c 'git tag | grep -P \"^\\d\" | sort -rn -t. -k1,1 -k2,1 -k3,1 | head -n1' -
	dtd = !sh -c 'git log $1..$2 --oneline | egrep -o \"\\w+-[0-9]+\" | sort | uniq' -

[merge]
	tool = vimdiff
[http]
	sslVerify = false
[pack]
	threads = 1
[push]
	default = simple
[pager]
	log = ~/bin/diff-highlight | less
	show = ~/bin/diff-highlight | less
	diff = ~/bin/diff-highlight | less
