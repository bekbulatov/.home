# .bashrc

export HISTSIZE=1000
export HISTIGNORE="&:cd:ls:[bf]g:exit:bash:[cxh]:a\ "
export HISTCONTROL=ignoredups

export EDITOR=vim
export PAGER=less
export PYTHONSTARTUP=~/.pythonstartup

# git
[ -f ~/.git-completion ] && source ~/.git-completion

# bash aliases
[ -f ~/.bashrc_aliases ] && source ~/.bashrc_aliases

# bash functions
[ -f ~/.bashrc_functions ] && source ~/.bashrc_functions

# local bash settings
[ -f ~/.bashrc_local ] && source ~/.bashrc_local

